@using WebApplication3.Models;
@model ShoppingCartModel
@{
    ViewBag.Title = "ThanhToan";
}

<h2>Thanh Toán</h2>


<script type="text/javascript">
    $(document).ready(function () {
        $(".Quantity").change(function () {
            var quantity = $(this).val();
            var proID = $(this).attr("name");
            //alert("Id: " +proID+". Quantity: " + quantity);
            $.ajax({
                url: '@Url.Action("UpdateQuantity")',
                data: { "proID": proID, "quantity": quantity }
            });
            window.location = '/GioHang';
        });
    });
</script>
@if (Model != null && Model.Cart != null)
{
    <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
        @{
            double? total = 0;
        }
        @foreach (var item in Model.Cart.ListItem)
        {
            total += item.Total;
            <tr>
                <td>@item.Name (@Html.ActionLink("Xóa", "XoaSanPham", new { id = item.Id }))</td>
                <td>@item.Price VND/ 1SP</td>
                <td>
                    @Html.DropDownList("" + item.Id.ToString(), new SelectList(
                         new List<Object> {

                         new { value="0", text = "0"},
                         new { value="1", text = "1"},
                         new { value="2", text = "2"},
                         new { value="3", text = "3"},
                         new { value="4", text = "4"},
                         new { value="5", text = "5"},
                         new { value="6", text = "6"},
                         new { value="7", text = "7"},
                         new { value="8", text = "8"},
                         new { value="9", text = "9"},
 }, "value", "text", item.Quantity), new { @class = "Quantity" })
                </td>
                <td>@item.Total.Value.ToString("#,##0") VND</td>
            </tr>
        }
        <tr>
            <td colspan="3"><b>Tổng tiền</b></td>
            <td><b>@total.Value.ToString("#,##0") VND</b></td>
        </tr>
    </table>
    <h2>Thông tin khách hàng</h2>
            var customer = ViewBag.customer;
            <table class="table table-bordered">
                <tr>
                    <td>Tên Khách Hàng: </td>
                    <td>@customer.name</td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td>@customer.email</td>
                </tr>
                <tr>
                    <td>Địa chỉ: </td>
                    <td>@customer.address</td>
                </tr>
                <tr>
                    <td>Phone: </td>
                    <td>@customer.phone</td>
                </tr>
            </table>
            <h2>Thông tin giao hàng</h2>
            using (Html.BeginForm("ThanhToan", "Cart"))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            Địa chỉ giao hàng:
                        </div>
                        <div class="col-md-5">
                            <textarea name="ShipAddress" class="form-control"></textarea>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            Số điện thoại giao hàng:
                        </div>
                        <div class="col-md-5">
                            <input type="text" name="ShipPhone" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <input type="submit" value="Thanh Toán" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }
            }
            else
            {
                <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                    <tr>
                        <td colspan="4"> Hiện chưa có sản phẩm nào trong giỏ hàng</td>
                    </tr>
                </table>
            }
<hr />
