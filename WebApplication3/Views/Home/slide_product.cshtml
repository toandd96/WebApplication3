@using WebApplication3.Models;
@model List<Product>
<link href="~/Content/user/css/StyleSheet1.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-9">
                <h3>
                    Carousel Product Cart Slider
                </h3>
            </div>
            <div class="col-md-3">
                <!-- Controls -->
                <div class="controls pull-right hidden-xs">
                    <a class="left fa fa-chevron-left btn btn-success" href="#carousel-example"
                       data-slide="prev"></a><a class="right fa fa-chevron-right btn btn-success" href="#carousel-example"
                                                data-slide="next"></a>
                </div>
            </div>
        </div>
        <div id="carousel-example" class="carousel slide hidden-xs" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                        <div class="col-sm-3">
                            <div class="col-item">
                                <div class="photo">
                                    <img src="@item.image" class="co" alt="a" />
                                </div>
                                <div class="info">
                                    <div class="row">

                                        <div class="price col-md-6">
                                            <h5>
                                                @item.name
                                            </h5>
                                            <h5 class="price-text-color">
                                                @item.price
                                            </h5>
                                        </div>
                                        <a href="/Cart/ThemVaoGioHang/@item.id" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                        <div class="rating hidden-sm col-md-6">
                                            <i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                                            </i><i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                                            </i><i class="fa fa-star"></i>
                                        </div>

                                        <div class="clearfix">
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>