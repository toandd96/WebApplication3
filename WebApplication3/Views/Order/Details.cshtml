@using WebApplication3.Models;
@model List<OrderDetail>
@{
    Layout = "~/Views/Shared/_LayoutPageADM.cshtml";
}

<div>
    <h4>OrderDetail</h4>
    <hr />
    <p class="text_color" style="font-size:25px;text-align:center;">Trạng thái giao hàng: @ViewData["status"]</p>
    @foreach (var item in Model)
    {
        <div class="form-group fa-border">
            <div class="row">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(Modelitem => item.price)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.quantity)
                    </dt>

                    <dd>
                        @Html.DisplayFor(Modelitem => item.quantity)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.Order.shipaddress)
                    </dt>

                    <dd>
                        @Html.DisplayFor(Modelitem => item.Order.shipaddress)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.image)
                    </dt>

                    <dd>
                        <img src="@item.image" width="150" alt="@item.image">
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.Product.name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(Modelitem => item.Product.name)
                    </dd>

                </dl>
            </div>
        </div>
    }
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-info" })
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function text_color() {
        if ($('.text_color').text() == "Trạng thái giao hàng: Chưa")
            $('.text_color').css("color", "red");
        else
            $('.text_color').css("color", "blue");
    });
</script>