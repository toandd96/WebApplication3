@using WebApplication3.Models;
@model List<OrderDetail>
@{
    Layout = "~/Views/Shared/_LayoutPageADM.cshtml";
}

<div>
    <h4>OrderDetail</h4>
    <hr />
    @foreach (var item in Model)
    {
        <div class="form-group ">
            <div class="row">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(Modelitem => item.price)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.quantity)
                    </dt>

                    <dd>
                        @Html.DisplayFor(Modelitem => item.quantity)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.Order.shipaddress)
                    </dt>

                    <dd>
                        @Html.DisplayFor(Modelitem => item.Order.shipaddress)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.image)
                    </dt>

                    <dd>
                        <img src="@item.image" width="150" alt="">
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(Modelitem => item.Product.name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(Modelitem => item.Product.name)
                    </dd>


                </dl>
            </div>
        </div>
    }
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
